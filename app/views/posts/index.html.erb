<section class="posts">
	<h1 class="posts-title">Posts</h1>
	<% @posts.each do |post| %>
		<div class="post">
			<%= image_tag(post.user.picture, size: "30", class: "pic") %>
			<%= link_to post.user.username, user_path(post.user), class: "name" %>
			<p class="post-text-index"><%= link_to post.body[0..250] + "...", post_path(post) %></p>
			<span class="created">Created on <%= post.created_at.strftime("%m-%d-%Y at %I:%M %p") %>
			<%= link_to "Comment (#{post.comments.count})", post_path(post), class: "right-link" %>
			<%= form_for(:like, url: likes_path, html: { class: "like-form"}) do |f| %>
				<%= f.hidden_field :user_id, value: post.user.id %>
				<%= f.hidden_field :post_id, value: post.id %>
				<%= f.submit "Like (#{Like.where(post_id: post.id).count})", class: "likes" %>
			<% end %>
		</div>
	<% end %>
</section>
