<div class="container right-section">
	<h1>Posts</h1>
	<% @posts.each do |post| %>
		<div class="index-post">
			<p class="post-text"><%= link_to post.body[0..250] + "...", post_path(post) %></p>
			<span>By <%= link_to post.user.username, user_path(post.user) %></span> <span>Created at <%= post.created_at %></span> <span><%= link_to "Comments(#{post.comments.count})", post_path(post) %></span>
		</div>
	<% end %>
</div>
