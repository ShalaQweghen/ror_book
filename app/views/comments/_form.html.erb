<div class="comment-form right-section">
	<%= form_for(@comment) do |f| %>
		<%= f.hidden_field :commenter_id, value: @post.user.id %>
		<%= f.hidden_field :post_id, value: @post.id %>
		<%= f.label :body, "Your comment: " %><br>
		<%= f.text_area :body %>

		<%= f.submit "Submit" %>
	<% end %>
</div>