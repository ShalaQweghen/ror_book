<div class="container form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-body"}) do |f| %>
    <h2 class="title">Log in</h2>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field-checkbox">
        <%= f.check_box :remember_me, class: "check-box" %>
        <%= f.label :remember_me, class: "check-box-label" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>

</div>
