<div class="container form">

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-body" }) do |f| %>
	  <%= devise_error_messages! %>
	  <h2 class="title">Forgot your password?</h2>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send" %>
	  </div>

	  <%= render "devise/shared/links" %>
	<% end %>
</div>